<div class="admin-orders-panel">
  <div class="panel-heading">
    <div class="panel-heading-logo">
      <i class="material-icons">add_shopping_cart</i>
    </div>
    <div class="panel-heading-text">
      <h1>Заказы</h1>
    </div>
  </div>
  <div class="admin-orders-plates">
    <div class="first-plate">
      <p class="icon"><i class="material-icons">search</i></p>
      <div class="search-by">
        <div class="search-by-order-number">
          <label>Номер заказа</label>
          <input type="text">
        </div>
        <div class="search-by-order-email">
          <label>Email</label>
          <input type="text">
        </div>
        <div class="search-by-order-phone">
          <label>Тел. номер</label><input type="number">
        </div>
      </div>
    </div>
  </div>

  <div class="search-home-panel">
    <table class="search-catalog-items">
      <thead>
        <tr>
          <th>Номер заказа</th>
          <th>Email</th>
          <th>Тел. номер</th>
          <th>Стоимость</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>

  <div class="home-panel">
    <h2>Заказы</h2>
    <table class="home-panel-table">
      <thead>
        <tr>
          <th>Номер заказа</th>
          <th>Email</th>
          <th>Тел. номер</th>
          <th>Стоимость</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        {{#if orders.length}}
        {{#each orders}}
        <tr class="order-row">
          <td class="orderId">{{id}}</td>
          <td class="orderEmail">{{email}}</td>
          <td class="orderPhone">{{phone}}</td>
          <td>{{totalCost}}</td>
          <td>
            <div class="td-element">
              <button class="status {{status}}">{{status}}</button>
            </div>
            <div class="td-element">
              <a href="/admin/order/{{id}}" target="_blank"><button class="status passing">Перейти</button></a>
            </div>
            <div class="td-element">
              <form action="/admin/order/{{id}}/remove" method="POST">
                <input type="hidden" id="csrf" name="_csrf" value="{{@root.csrf}}">
                <button type="submit" class="status passing">Удалить</button>
              </form>
            </div>
          </td>
        </tr>
        <tr class="order-brief-info-section">
          <td colspan="5">
            <div class="order-brief-info">
              <div class="order-brief-info-contacts">
                <p class="p-order-brief-info">Имя: <span>{{name}} {{surname}}</span></p>
                <p class="p-order-brief-info">Email: <span>{{email}}</span></p>
                <p class="p-order-brief-info">Тел. номер: <span>{{phone}}</span></p>
              </div>
              <div class="order-brief-info-address">
                <p class="p-order-brief-info">Страна: <span>{{country}}</span></p>
                <p class="p-order-brief-info">Город: <span>{{town}}</span></p>
                <p class="p-order-brief-info">Регион: <span>{{region}}</span></p>
                <p class="p-order-brief-info">Улица, дом, квартира: <br><span>{{address}}</span></p>
                <p class="p-order-brief-info">Индекс: <span>{{zipcode}}</span></p>
              </div>
              <div class="order-brief-info-orders">
                {{#each orderItems}}
                <p class="p-order-brief-info">{{title}} <span>{{size}}</span> <span>{{quantity}} шт.</span></p>
                {{/each}}
              </div>
            </div>
          </td>
        </tr>
        {{/each}}
        {{else}}
        {{!-- <p>Здесь пока нет ни одного заказа.</p> --}}
        {{/if}}
      <tbody>
    </table>
  </div>
</div>
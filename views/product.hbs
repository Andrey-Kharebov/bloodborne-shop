<input type="hidden" id="user" name="user" value="{{user.id}}">
<div class="product-page">
  <h1>{{title}}</h1>

  <div class="product-section">
    <div class="product-slider">
      <div class="product-slider-center">
        <div class="product-slider-inner">
          {{#each images}}
          <div class="product-slide">
            {{!-- <img src="/{{imageUrl}}" alt="{{title}}"> --}}
            <img src="https://{{@root.response.bucket}}.s3.{{@root.response.region}}.amazonaws.com/{{imageUrl}}" alt="{{title}}">
          </div>
          {{/each}}
        </div>
        <div class="product-slider-arrow-left">
          <i class="fas fa-arrow-left"></i>
        </div>
        <div class="product-slider-arrow-right">
          <i class="fas fa-arrow-right"></i>
        </div>
      </div>
      <div class="product-slider-bottom">
        <div class="product-switchers">
          {{#each images}}
          <div class="product-switcher">
            <i class="far fa-dot-circle"></i>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="product-info">
      <input type="hidden" id="hidden-price" value="{{product.price}}">
      <div class="product-price">
        {{product.price}}
      </div>
      <hr>
      <div class="product-description">
        {{{product.description}}}
      </div>
      <div class="product-size">
        <p>Выберите размер:</p>
        <ul>
          <li><button class="product-size-btn">XS</button></li>
          <li><button class="product-size-btn">S</button></li>
          <li><button class="product-size-btn">M</button></li>
          <li><button class="product-size-btn">L</button></li>
          <li><button class="product-size-btn">XL</button></li>
          <li><button class="product-size-btn">2XL</button></li>
          <li><button class="product-size-btn">3XL</button></li>
        </ul>
      </div>
      <div class="quantity_add">
        <div class="quantity">
          <p>Количество:</p>
          <div class="product-counter">
            <button class="counter-minus">-</button>
            <input class="counter-value" type="number" value="1">
            <button class="counter-plus">+</button>
          </div>

        </div>
        <div class="add">
          <input type="hidden" name="id" value="{{product.id}}">
          <button class="add-to-cart" type="submit" data-id="{{product.id}}">Добавить в корзину
            <span>&#8640;</span></button>
        </div>
      </div>
    </div>
  </div>
  <div class="recommended-section">
    <h1>Рекомендуем к покупке</h1>
    <div class="recommended-slider">
      <div class="recommended-slider-arrow-left">
        <i class="fas fa-arrow-left"></i>
      </div>
      <div class="recommended-slider-center">
        <div class="recommended-slider-inner">
          {{#each recommended}}
          <div class="recommended-slide">
            <input type="hidden" class="recId" name="id" value="{{id}}">
            <div class="recommended-slide-img">
              <img src="https://{{@root.response.bucket}}.s3.{{@root.response.region}}.amazonaws.com/{{imageUrl}}" alt="{{title}}">
            </div>
            <div class="recommended-slide-price">
              <div class="product-price">{{price}}</div>
            </div>
            <div class="recommended-slide-title">
              {{title}}
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="recommended-slider-arrow-right">
        <i class="fas fa-arrow-right"></i>
      </div>
    </div>
  </div>
</div>